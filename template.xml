<?xml version="1.0"?>
<template
    format="5"
    revision="1"
    name="Mvi fragment"
    description="Creates a new mvi page which contains fragment, layout, view, presenter and view state."
    minApi="9"
    minBuildApi="9">

    <category value="Other" />

    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />

    <parameter
        id="page"
        name="Object Kind"
        type="string"
        constraints="nonempty"
        default="Item"
        help="Other examples are 'Person', 'Book', etc." />


    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
